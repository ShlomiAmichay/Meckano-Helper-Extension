{
  "manifest_version": 3,
  "name": "Meckano Time Tracker Helper",
  "version": "1.0.0",
  "description": "Automate filling working hours on Meckano time tracking system",
  
  "permissions": [
    "activeTab",
    "storage"
  ],
  
  "host_permissions": [
    "https://app.meckano.co.il/*"
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Meckano Time Tracker Helper",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "content_scripts": [
    {
      "matches": ["https://app.meckano.co.il/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png", 
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
